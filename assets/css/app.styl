@keyframes lsd {
	0% {
        transform(scaleY(1.1))
    }
    33% {
        transform(scaleY(1.5) skewY(-6deg) scaleX(1.2) translateZ(0))
    }
    66% {
    	transform(scaleY(1.2) skewY(6deg) translateZ(0))
    }
    100% {
    	transform(scaleY(1.1) scaleX(1.1))
    }
}

